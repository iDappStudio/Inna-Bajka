<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".reservation.fragments.EtapFiveFragment"
                                                   android:id="@+id/constraintLayout2"
                                                   app:layout_anchorGravity="center_vertical|center_horizontal">

    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/phoneEdit"
            android:digits="1234567890"
            android:hint="Numer telefonu"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center" android:textAllCaps="false"
            android:imeOptions="actionDone"
            android:singleLine="true" android:maxLength="9"
            android:cursorVisible="false"
            android:textCursorDrawable="@null"
            android:backgroundTint="@color/colorPrimaryDark"
            android:inputType="phone" android:maxLines="1"
            app:layout_constraintStart_toEndOf="@+id/codeEdit"
            app:layout_constraintBottom_toTopOf="@+id/next" android:layout_marginBottom="32dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"/>

    <TextView
            android:text="Numer Telefonu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_gravity="center_horizontal|center_vertical" android:textAllCaps="true"
            android:textColor="@color/colorWhite" android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView5"/>

    <ImageView
            android:src="@drawable/ic_phone_black_24dp"
            android:layout_width="64dp"
            android:layout_height="64dp" android:id="@+id/imageView5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:tint="@color/colorLigth2" android:tintMode="src_in"
            app:layout_constraintHorizontal_bias="0.509"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="Potrzebujemy twojego numeru telefonu do weryfikacji rezerwacji oraz skontaktowania się w razie problemów"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:textAllCaps="false" android:textSize="14sp"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView7"/>

    <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/codeEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:digits="123456789"
            android:hint="+48"
            android:textAlignment="center" android:textAllCaps="false"
            android:imeOptions="actionNext"
            android:singleLine="true" android:maxLength="3"
            android:backgroundTint="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:inputType="phone" android:maxLines="1"
            app:layout_constraintTop_toTopOf="@id/phoneEdit"
            app:layout_constraintLeft_toLeftOf="parent"
            android:cursorVisible="false"
            android:textCursorDrawable="@null"
            android:layout_marginLeft="32dp" app:layout_constraintBottom_toBottomOf="@+id/phoneEdit"
            android:minWidth="60dp"/>

    <com.google.android.material.button.MaterialButton
            android:text="Wpisz numer telefonu"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/next" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:rippleColor="@color/colorLigth"
            android:textColor="@color/colorWhite"
            android:textAllCaps="true"
            android:backgroundTint="@color/colorPrimaryDark" android:enabled="false"
    />

</androidx.constraintlayout.widget.ConstraintLayout>