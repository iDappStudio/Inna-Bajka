<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
                                                   android:layout_marginStart="16dp" android:layout_marginEnd="16dp">

    <com.comix.rounded.RoundedCornerImageView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/imageView14"
            app:cornerRadius="2dp"
            android:src="@mipmap/backgroundcard"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop" android:background="@color/colorTranspery"/>

    <View
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/view8" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@drawable/background_corners"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_watch_later_black_24dp"
            android:id="@+id/imageView11"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView12"
            android:tint="@color/colorAccent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_date_range_black_24dp"
            android:id="@+id/imageView12"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:tint="@color/colorAccent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_supervisor_account_black_24dp"
            android:id="@+id/imageView13"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView11"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:tint="@color/colorAccent" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/date"
            app:layout_constraintStart_toEndOf="@+id/imageView12" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView12"
            app:layout_constraintBottom_toBottomOf="@+id/imageView12" android:textColor="@color/colorWhite"/>
    <TextView
            android:text=".."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/time"
            app:layout_constraintTop_toTopOf="@+id/imageView11" app:layout_constraintStart_toEndOf="@+id/imageView11"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="@+id/imageView11"
            android:textColor="@color/colorWhite"/>
    <TextView
            android:text=".."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/people"
            app:layout_constraintStart_toEndOf="@+id/imageView13" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView13"
            app:layout_constraintBottom_toBottomOf="@+id/imageView13" android:textColor="@color/colorWhite"/>
    <View
            android:layout_width="1dp"
            android:layout_height="0dp" android:id="@+id/view6" android:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@+id/people"
            app:layout_constraintTop_toTopOf="@+id/date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/date" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/message"
            app:layout_constraintStart_toEndOf="@+id/view6" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/view6" app:layout_constraintBottom_toBottomOf="@+id/view6"
            android:text="Pamiętaj żeby zjawić się do 15 minut od godziny rezerwacji innaczej rezerwacja przepadnie"
            app:layout_constraintVertical_bias="0.0"
            android:textColor="@color/colorWhite" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="12sp" android:gravity="center_vertical"
            android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>