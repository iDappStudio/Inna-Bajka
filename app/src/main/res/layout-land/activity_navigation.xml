<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NavigationActivity" android:id="@+id/navigationLayout" android:background="@color/colorPrimary">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:gravity="center_horizontal|center_vertical"
            app:layout_constraintBottom_toTopOf="@+id/button">
        <ImageView
                android:layout_height="200dp" app:srcCompat="@mipmap/logo" android:id="@+id/imageView"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_width="200dp" android:layout_marginBottom="32dp"
                android:layout_marginEnd="8dp"/>
        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp" android:gravity="center_horizontal|center_vertical">

            <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                      android:gravity="center_horizontal|center_vertical">
                <com.google.android.material.button.MaterialButton
                        android:text="Menu"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" android:id="@+id/btnMenu"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:textColor="@android:color/white"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:textAlignment="center" app:iconTint="@android:color/white"
                        android:textAllCaps="true"
                        android:marqueeRepeatLimit="marquee_forever" app:rippleColor="@color/colorLigth"
                        android:layout_marginEnd="32dp"/>
                <com.google.android.material.button.MaterialButton
                        android:text="GALERIA"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" android:id="@+id/btnGallery"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:textColor="@android:color/white"
                        android:insetTop="0dp" android:insetBottom="0dp" app:rippleColor="@color/colorLigth"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                      android:gravity="center_horizontal|center_vertical">
                <com.google.android.material.button.MaterialButton
                        android:text="WYDARZENIA"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" android:id="@+id/btnEvents"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:textColor="@android:color/white"
                        android:insetTop="0dp" android:insetBottom="0dp" app:rippleColor="@color/colorLigth"
                        android:layout_marginEnd="32dp" android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"/>
                <com.google.android.material.button.MaterialButton
                        android:text="NOWOŚCI"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" android:id="@+id/btnNews"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:textColor="@android:color/white"
                        android:insetTop="0dp"
                        android:insetBottom="0dp" app:rippleColor="@color/colorLigth"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                      android:gravity="center_horizontal|center_vertical">
                <com.google.android.material.button.MaterialButton
                        android:text="LOKALIZACJA"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" android:id="@+id/btnLocation"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:textColor="@android:color/white"
                        android:insetTop="0dp" android:insetBottom="0dp" app:rippleColor="@color/colorLigth"
                        android:layout_marginEnd="32dp"/>
                <com.google.android.material.button.MaterialButton
                        android:text="Rezerwacje"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" android:id="@+id/btnReservation"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:textColor="@android:color/white"
                        android:insetTop="0dp" android:insetBottom="0dp" app:rippleColor="@color/colorLigth"
                />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp" android:id="@+id/btnClose"
            app:layout_constraintStart_toStartOf="parent"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="8dp"
            app:backgroundTintMode="src_in"
            android:src="@drawable/ic_close_black_24dp" app:backgroundTint="@android:color/transparent"/>

    <TextView
            android:text="2019 © iDapp Studio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textColor="@color/colorLigth"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button"
            android:textSize="10sp"/>

    <com.google.android.material.button.MaterialButton
            android:text="ZOSTAW NAPIWEK "
            android:layout_width="0dp"
            android:id="@+id/button"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp" android:paddingEnd="0dp" android:paddingLeft="0dp"
            android:paddingRight="0dp" android:paddingStart="0dp" android:paddingTop="0dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton" android:insetTop="0dp"
            android:insetBottom="0dp" app:cornerRadius="0dp" app:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white" app:rippleColor="@color/colorLigth"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>