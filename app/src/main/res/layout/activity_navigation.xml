<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NavigationActivity" android:id="@+id/navigationLayout" android:background="@color/colorPrimary">

    <ImageView
            android:layout_height="200dp" app:srcCompat="@mipmap/logo" android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_width="200dp"/>

    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp" android:id="@+id/btnClose"
            app:layout_constraintStart_toStartOf="parent"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="8dp"
            app:backgroundTintMode="src_in"
            android:src="@drawable/ic_close_black_24dp" app:backgroundTint="@android:color/transparent"/>

    <com.google.android.material.button.MaterialButton
            android:text="Menu"
            android:layout_width="wrap_content"
            android:layout_height="40dp" android:id="@+id/btnMenu" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@android:color/white"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:textAlignment="center" app:iconTint="@android:color/white"
            android:textAllCaps="true"
            android:marqueeRepeatLimit="marquee_forever" app:rippleColor="@color/colorLigth"/>

    <com.google.android.material.button.MaterialButton
            android:text="NOWOŚCI"
            android:layout_width="wrap_content"
            android:layout_height="40dp" android:id="@+id/btnNews"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@android:color/white" app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnMenu"
            android:insetTop="0dp"
            android:insetBottom="0dp" app:rippleColor="@color/colorLigth"/>

    <com.google.android.material.button.MaterialButton
            android:text="WYDARZENIA"
            android:layout_width="wrap_content"
            android:layout_height="40dp" android:id="@+id/btnEvents"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@android:color/white" app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnNews"
            android:insetTop="0dp" android:insetBottom="0dp" app:rippleColor="@color/colorLigth"/>

    <com.google.android.material.button.MaterialButton
            android:text="LOKALIZACJA"
            android:layout_width="wrap_content"
            android:layout_height="40dp" android:id="@+id/btnLocation"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@android:color/white" app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnEvents"
            android:insetTop="0dp" android:insetBottom="0dp" app:rippleColor="@color/colorLigth"/>

    <com.google.android.material.button.MaterialButton
            android:text="GALERIA"
            android:layout_width="wrap_content"
            android:layout_height="40dp" android:id="@+id/btnGallery"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnLocation"
            android:insetTop="0dp" android:insetBottom="0dp" app:rippleColor="@color/colorLigth"/>

    <com.google.android.material.button.MaterialButton
            android:text="Rezerwacje"
            android:layout_width="wrap_content"
            android:layout_height="40dp" android:id="@+id/btnReservation"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnGallery"
            android:insetTop="0dp" android:insetBottom="0dp" app:rippleColor="@color/colorLigth"/>

    <TextView
            android:text="2019 © iDapp Studio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textColor="@color/colorLigth"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button"
            android:textSize="10sp"/>

    <com.google.android.material.button.MaterialButton
            android:text="ZOSTAW NAPIWEK "
            android:layout_width="0dp"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_height="wrap_content"
            android:paddingBottom="0dp" android:paddingEnd="0dp" android:paddingLeft="0dp"
            android:paddingRight="0dp" android:paddingStart="0dp" android:paddingTop="0dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton" android:insetTop="0dp"
            android:insetBottom="0dp" app:cornerRadius="0dp" app:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white" app:rippleColor="@color/colorLigth"/>

</androidx.constraintlayout.widget.ConstraintLayout>